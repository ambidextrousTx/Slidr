{
  "name": "slidr",
  "version": "1.0.0",
  "description": "Electron-based random image slideshow viewer",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:node": "jest --selectProjects=node",
    "test:jsdom": "jest --selectProjects=jsdom",
    "test:watch": "jest --watch",
    "start": "electron ."
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testEnvironment": "node",
        "testMatch": [
          "**/*.spec.js"
        ]
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/*.dom.spec.js"
        ]
      }
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ambidextrousTx/Slidr.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ambidextrousTx/Slidr/issues"
  },
  "homepage": "https://github.com/ambidextrousTx/Slidr#readme",
  "dependencies": {
    "electron": "^38.4.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-electron-runner": "^0.0.2",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.0.1"
  }
}
